<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
	<variable name="myvar" value="myvalue"/>

	<!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
	<targets>
		<!--
			add your targets here
			See https://github.com/nlog/NLog/wiki/Targets for possible targets.
			See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
		-->

		<!--
		    Write events to a file with the date in the filename.
            layout="${longdate} ${uppercase:${level}} ${message}" />
		-->
		<!-- write logs to file  -->
		<target xsi:type="File" name="mslog"
					fileName="${gdc:item=LogFilePath}/logs/ms_${gdc:item=Id}_${date:format=yyyyMMdd}.log"
					layout="${longdate}|${level}|${message}" />

		<!-- write App logs to applog file  -->
		<target xsi:type="File" name="applog"
					fileName="${gdc:item=LogFilePath}/logs/api_${gdc:item=Id}_${date:format=yyyyMMdd}.log"
					layout="${longdate}|${gdc:item=MachineName}|${level}|${message}" />

		<!-- another file log, only own logs. Uses some ASP.NET core renderers -->
		<target xsi:type="Console" name="logconsole" >
			<layout xsi:type="JsonLayout" includeScopeProperties="true">
				<attribute name="date" layout="${date:format=yyyy-MM-ddTHH\:mm\:ss.fff}" />
				<attribute name="threadId" layout="${threadname:whenEmpty=${threadid}}" />
				<attribute name="level" layout="${level:upperCase=true}"/>
				<attribute name="message" layout="${replace-newlines:${message}}" />
				<!-- <attribute name="exception" layout="${exception:format=ToString}" /> -->
				<attribute name="exception" layout="${exception:format=@}" />
			</layout>
		</target>
	</targets>

	<rules>
		<!-- add your logging rules here -->
		<!--
			Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
			<logger name="*" minlevel="Debug" writeTo="f" />
		-->
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="${environment:variable=LogLevel:default=Info}" writeTo="logconsole" />
		<logger name="Microsoft.*" minlevel="Info" writeTo="mslog" />

		<!--Skip non-critical Microsoft logs and so log only own logs-->
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<!-- BlackHole without writeTo -->
		<logger name="*" minlevel="${environment:variable=LogLevel:default=Info}" writeTo="applog" />
		<!--<logger name="*" minlevel="Debug" writeTo="file" />-->
	</rules>
</nlog>